        <StackLayout
            AbsoluteLayout.LayoutBounds="0, 0.5, 1, 0.3"
            AbsoluteLayout.LayoutFlags="PositionProportional, SizeProportional"
            Spacing="20"
            >
            <Label 
                Text="Why pay for credit?"
                FontSize="15"
                FontAttributes="Bold"
