<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Practice.QuotesPage">
    <ContentPage.Padding>
        <OnPlatform
            x:TypeArguments="Thickness"
            Android="20,30,20,20"
            WinPhone="20,40,20,20"
            iOS="20,40,20,20"/>
    </ContentPage.Padding>
    
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Next" HorizontalOptions="Center" Clicked="Handle_Clicked" />
            <Label Text="{Binding Source={x:Reference fontSizeSlider},
                Path=Value,
                StringFormat='Font Size: {0:F0}'}"/>
            <Slider
                x:Name="fontSizeSlider"
                Maximum="50"
                Minimum="16"/>
            <Label x:Name="quoteLabel" 
                   FontSize="{Binding Source={x:Reference fontSizeSlider}, Path=Value}" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>