<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.StackLayoutExercise1"
             BackgroundColor="#127AC7">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="0, 0, 0, 20">
                <Label Text="Welcome to Xamarin" 
                   FontSize="30" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center" TextColor="White" />
                <Label Text="Cross-platform apps made easy" 
                       FontSize="18" 
                       TextColor="White" />
            </StackLayout>
            <StackLayout Spacing="20">
            <Button Text="Login" TextColor="White" BackgroundColor="#1dabf0"/>
            <Button Text="Register" TextColor="White" BackgroundColor="#1dabf0"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>